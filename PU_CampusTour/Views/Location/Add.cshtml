@section Add_Location{

<div style="margin-left:100px">
        
    <h2>Places Addition</h2> 
                    
            <h4>   @ViewBag.MSG  </h4>   
            
            

    <form method=post action="/Location/Add">
    
      <br /> <br />
    	
                    <label><strong>Place Name:</strong></label>
                    <br />
                    <input type="text" name="Name" value="@ViewBag.a1" />
                      
                     <br /> <br />
                    
                    <label ><strong>Detail:       </strong></label>
                    <br />
                    <input type="text" name="Detail" value="@ViewBag.a2"  />
                    
                    <br /> <br />

                    
                    <label ><strong>Longitude:</strong></label>
                    <br />
                    <input type="text" name="Longitude" value="@ViewBag.a3"  />
