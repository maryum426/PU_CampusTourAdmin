                    <option value="Empty"></option> 
                    
                    @if (id == 0)
                    {          
                        foreach (var k in data2)
                        {
                            if(cat==0)
                            {
                                <option value="@k.Category_Id">@k.Name</option>
                            }
                            else
                            {
                                
                                <option value="@cat" selected="selected">@catname</option>
                            }

                        }
                    }
                    else
                    {
                        foreach (var k in category)
                        {
                            <option value="@k.Category_Id" selected="selected">@k.Name</option>
                        }
                    }
                    </select>  

                      <br /> <br />
                    
                    <div class="form_row">
